<div class="main">
<h1 class="header"><%= t('view.welcome') %></h1>
<div class="content"
<p id="notice"><%= notice %></p>
<hr>
<div class="tasks">
<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>User type</th>
      <th>Number of Tasks submitted</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.user_type %></td>
        <td><%= user.tasks.count %></td>
        
        <td><%= link_to 'Show', admin_user_path(user),class:'btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user),class:'btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' },class:'btn-sm btn-danger' %></td>
      
      </tr>
      <% end %> 
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path,class:'new' %>
</div>
</div>
</div>
<br><br><br>

