<div class="tasks">
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User Email</th>
      <th>Admin</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.Admin %></td>
       
        <td><%= link_to 'Show', user,class:'btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_user_path(user),class:'btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:'btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
