<div class="main">
<h1 class="header"><%= t('view.welcome') %></h1>
<div class="content">
<p id="notice"><%= notice %></p>
<hr>

<div class="tasks">

<h1>Labels</h1>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      
      <th colspan="3">More Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
    <% if current_user.id == label.user_id %>
      <tr>
        <td><%= label.title %></td>
        <td><%= label.content %></td>
        <td><%= label.user.name %></td>
        
        <td><%= link_to 'Show', label,class:'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_label_path(label),class:'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-secondary btn-sm' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label', new_label_path, class: 'new' %>
</div>
</div>
<br><br><br><br>
</div>