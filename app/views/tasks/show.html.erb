<div class="main">
<div class="content">
<div class="tasks">
<div class="form">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Details:</strong>
  <%= @task.details %>
</p>
<p>
  <strong>staus:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>priority:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong>Creator Email:</strong>
  <%= @task.user.email %>
</p>

<p>
  <strong>Creation date:</strong>
  <%= @task.created_at %>
</p>

<p>
  <strong>start date:</strong>
  <%= @task.startdate %>
</p>

<p>
  <strong>end date:</strong>
  <%= @task.enddate %>
</p>

<hr>
<h4>Labels attached to this task:</h4>
<% @task.labels.each do |label| %>
<div class="labels">
Title:<%= label.title + '       ' %> <br/>Content:<%= label.content %>
</div>
<% end %>

<%= link_to t('view.Edit'), edit_task_path(@task),class:'btn btn-info btn-sm' %> |
<%= link_to t('view.Back'), tasks_path,class:'btn btn-secondary btn-sm' %>
</div>
</div>
</div>
</div>