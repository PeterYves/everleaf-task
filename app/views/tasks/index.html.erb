<h1><%= t('view.hello_everyone') %></h1>

<p id="notice"><%= notice %></p>
<hr>
<h1>Tasks</h1>

<%= form_tag(tasks_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search', name: nil %>
 <% end %>

<table>
  <thead>
    <tr>
      <th>TaskName</th>
      <th>Details</th>
      <th>Status</th>
      <th>Priority</th>
      <th>StartDate</th>
      <th>EndDate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.details %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.startdate %></td>
        <td><%= task.enddate %></td>
       
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<div class="sort">
<h3>Sort By</h3><hr>
<%= link_to "name", tasks_path(sort_by: "name"),class:'btn btn-primary' %>
<%= link_to "enddate", tasks_path(sort_by: "enddate"),class:'btn btn-danger' %>
</div>
<br>


<%= link_to t('view.New Task'), new_task_path %>


